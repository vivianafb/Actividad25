<%= form_with model: @sale, local:true do |f| %>

        <%= f.label :cod, "codigo" %>
        <%= f.number_field :cod %>

        <%= f.label :detail %>
        <%= f.text_area :detail %>

        <%= f.label :category %>
        <%= f.text_field :category %>

        <%= f.label :value %>
        <%= f.number_field :value %>

        <%= f.label :discount %>
        <%= f.number_field :discount %>

        <%= f.label :tax %>
        <%= f.check_box :tax %>

        <%= f.label :total %>
        <%= f.number_field :total %>
       
        <%= f.submit "Crear" %>

<% end %>

<%= link_to 'Back', sales_path %>

